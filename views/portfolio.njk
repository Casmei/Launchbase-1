{% extends "layout.njk" %}

{% block head %}
<link
href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet"/>
<title>Portfolio - Tiago de Castro</title>
{% endblock %}

{% block conteudo %}

    <div id="wrapper">
      <h1>Aulas</h1>
    </div>

    <section class="cards">

      {% for item in items %}
        <!-- 1 -->
        <div class="card">

          <div class="card__image-container" id="{{ item.id }}">
            <img src="https://img.youtube.com/vi/{{ item.id }}/maxresdefault.jpg" alt="Imagem de {{ item.title }}"/>
          </div>

          <div class="card__content">
            <p>{{ item.title }}</p>
          </div>

          <div class="card__info">
            <p>{{ item.duration }}</p>
            <p class="card__price">{{ item.price }}</p>
          </div>
          
        </div>
      {% endfor %}

    </section>
    <!-- -------------------- MODAL ----------------------- -->
    <!-- Fundo escuro -->
    <div class="modal-overlay">
      <!-- Modal branco -->
      <div class="modal">
        <!-- Fechar modal -->
        <a class="close-modal">
          <i class="material-icons">close</i>
        </a>
        <!-- VÃ­deo do modal -->
        <div class="modal-content">
          <iframe src="" frameborder="0"></iframe>
        </div>
      </div>
    </div>

    <script src="scripts.js"></script>

    {% endblock %}